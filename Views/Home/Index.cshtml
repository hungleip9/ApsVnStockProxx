@{
    var lstNoiBat = ViewBag.lstNoiBat;
    var lstMoi = ViewBag.lstMoi;
}
<div class="w-full h-full overflow-auto trang-chu">
    <div class="font-bold mb-2"><u>Tin nổi bật</u></div>
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            @foreach (var item in lstNoiBat)
            {

                <div class="new flex flex-col carousel-item">
                    <div class="box-img">
                        <img src="@item.Image" />
                    </div>
                    <div class="title">@item.Title</div>
                </div>
            }
        </div>
        <div class="flex flex-row justify-end">
            <div class="mr-2" data-bs-target="#carouselExample"
                 data-bs-slide="prev">
                prive
            </div>
            <div data-bs-target="#carouselExample"
                 data-bs-slide="next">
                next
            </div>
        </div>
    </div>
    
    <div class="font-bold mb-2"><u>Tin mới</u></div>
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            @foreach (var item in lstMoi)
            {

                <div class="new flex flex-col">
                    <div class="box-img">
                        <img src="@item.Image" />
                    </div>
                    <div class="title">@item.Title</div>
                </div>
            }
        </div>
        <div class="flex flex-row justify-end">
            <div class="mr-2" data-bs-target="#carouselExample"
                 data-bs-slide="prev">
                prive
            </div>
            <div data-bs-target="#carouselExample"
                 data-bs-slide="next">
                next
            </div>
        </div>
    </div>
</div>
<style lang="scss" scoped>
    .trang-chu {
        .new {
            width: 262px;
            height: 270px;
            margin-botom: 30px;
            margin-right: 30px;
            .box-img {
                img {
                    width: 262px;
                    height: 164px;
                }
            }
            .title {
                font-weight: 700;
                max-width: 260px;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
            }
        }
    }
</style>