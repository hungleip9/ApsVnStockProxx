@model List<Post>
@{
    var tinMoi = Model.Where(p => p.CateId == Convert.ToInt32(ViewData["IdTinMoi"]));
    var tinNoiBat = Model.Where(p => p.CateId == Convert.ToInt32(ViewData["IdTinNoiBat"]));
}
<div class="w-full h-full trang-chu overflow-auto">
    <div class="font-bold mb-2"><u>Tin nổi bật</u></div>
    <div class="flex flex-row content-center overflow-auto">
        @if (tinNoiBat.Count() == 0)
        {
            <p>Không có dữ liệu!</p>

        }
        @foreach (var item in tinNoiBat)
        {
            <a class="cursor-pointer" href="/Posts/Details/@item.Id">
                <div class="new flex flex-col carousel-item">
                    <div class="box-img">
                        <img src="@item.Image" />
                    </div>
                    <div class="title">@item.Title</div>
                    <div class="text-right font12">
                        <i class="fa-regular fa-clock"></i>
                        <span>@item.UpdatedDate.ToCustomFormat()</span>
                    </div>
                </div>
            </a>
        }
    </div>

    <div class="font-bold mb-2"><u>Tin mới</u></div>
    <div class="flex flex-row content-center overflow-auto">
        @if (tinMoi.Count() == 0)
        {
            <p>Không có dữ liệu!</p>

        }
        @foreach (var item in tinMoi)
        {
            <a class="cursor-pointer" href="/Posts/Details/@item.Id">
                <div class="new flex flex-col">
                    <div class="box-img">
                        <img src="@item.Image" />
                    </div>
                    <div class="title">@item.Title</div>
                    <div class="text-right font12">
                        <i class="fa-regular fa-clock"></i>
                        <span>@item.UpdatedDate.ToCustomFormat()</span>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
<style lang="scss" scoped>
    .trang-chu {

        .new {
            width: 262px;
            height: 270px;
            margin-botom: 30px;
            margin-right: 30px;
            .box-img {
                img {
                    width: 262px;
                    height: 164px;
                }
            }
            .title {
                font-weight: 700;
                max-width: 260px;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
            }
        }
    }
</style>