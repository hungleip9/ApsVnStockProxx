@model Post
@{
    var Path = "#";
    var NameClass = "box-img";
    if (ViewBag.HideTag == true)
    {
        Path = $"/Posts/Details/{Model.Id}";
        NameClass = "box-img-mini";
    }
}
<a href="@Path">
    <h4>@Model.Title</h4>
    <p>@Model.Content</p>
    <div class="@NameClass flex justify-center content-center">
        <img src="@Model.ImageContent" />
    </div>
    <p class="text-right">@Model.CreatedBy</p>
    @if (ViewBag.HideTag == false)
    {
        <div class="box-tag flex content-center">
            @foreach (var item in Model.IdTag.ToList())
            {
                <a class="tag cursor-pointer" href="/Posts/DetailTags/@item.Id">#@item.Name</a>
            }
        </div>
    }
</a>
<style lang="scss" scoped>
    .box-img {

        img {
            width: 500px;
            height: 500px;
        }
    }
    .box-img-mini {

        img {
            width: 250px;
            height: 250px;
        }
    }
    .box-tag {
        .tag {
            margin-right: 5px;
            border: 1px solid black;
            padding: 4px;
            cursor: potainer;
        }
    }

</style>